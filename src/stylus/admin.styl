body
  margin 1em
  background #666


// admin_buttons.php
#adminBtnsDiv
  width 100%
  display flex
  background #333
  margin-bottom 2em
  justify-content space-between



// tables_view
table.show
  width 85%
  margin 0 auto
  table-layout fixed
  border-collapse collapse

  tr:nth-child(odd)
    background #777

  th
    padding 0.25em
    border 1px solid black
    background #444


  input[type='text']
    width 100%
    padding 0em
    box-sizing border-box

  input[type='submit']
    width 100px
    display inline-block

  td
    overflow hidden
    text-overflow ellipsis
    padding 0.5em
    border 1px solid black
